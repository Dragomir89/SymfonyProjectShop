{% extends 'base.html.twig' %}
{% block navigation %}
    {{ render(controller('AppBundle:Category:showCategories')) }}
{% endblock %}
{% block body %}

<div class="jumbotron" style="border-radius: 5px; width: 500px; margin: 0 auto; padding: 10px">
<h2 style="text-align: center"> Edit Categories </h2>

<table class="table">
    <thead >
        <tr>
            <th>Category</th>
            <th colspan="3">Options</th>
        </tr>
    </thead>
    <tbody>
        {% for category in categories %}
            <tr>
                <td>
                    {{ category.name }}
                </td>
                <td>
                    {#{{ path("category_promotions_manage", {'id':category.id})}}#}
                    <button class="btn btn-primary btn-xs">
                        <a href="{{ path("edit_category_form", {'id':category.id})}}">
                            Edit
                        </a>
                    </button>
                    <button class="btn btn-success btn-xs">
                        <a href="{{ path("category_promotions_manage", {'id': category.id}) }}">
                            Promotion manage
                        </a>
                    </button>
                    <button class="btn btn-danger btn-xs">
                        <a href="{{ path("remove_category", {"id": category.id }) }}" data-toggle="tooltip" title="Warning! If you delete the category, all products which are from this category will be deleted too">
                            Delete
                        </a>
                    </button>
                </td>
            </tr>

        {% endfor %}
    </tbody>
</table>


</div>
{% endblock %}