{% extends 'base.html.twig' %}
{% block navigation %}
{{ render(controller('AppBundle:Category:showCategories')) }}
{% endblock %}


{% block body %}
<table cellpadding="5" cellspacing="0" border="1px">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Discount Price</th>
            <th>Quantity</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>

    {% for product in products %}
        <tr>
            <td>{{  product.name    }}</td>
            <td>{{  product.price   }}</td>
            <td>{{  product.newPrice}}</td>
            <td>{{  product.quantity}}</td>
            <td>{{  product.category.name}}</td>
        </tr>
    {% endfor %}

    </tbody>
</table>
<div>
    <h3>Sort By</h3>
    {#<button><a href="{{ path("") }} "></a></button>#}
</div>

{% endblock %}