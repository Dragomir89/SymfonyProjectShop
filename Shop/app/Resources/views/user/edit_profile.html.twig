{% extends 'base.html.twig' %}
{% block navigation %}
    {{ render(controller('AppBundle:Category:showCategories')) }}
{% endblock %}

{% block body %}
<div class="col-md-4 col-md-offset-4">
    <form method="post">
        <div class="form-group">
            <label>Име:</label>
            <input class="form-control" type="text" name="user[username]" value="{{ app.user.name }}"/>
        </div>

        <div class="form-group">
            <label>Стара парпла:</label>
            <input class="form-control" type="password" name="user[password]"/>
        </div>

        <div class="form-group">
            <label>Нова парола:</label>
            <input class="form-control" type="password" name="user[newPass01]" />
        </div>

        <div class="form-group">
            <label>Провтори парола:</label>
            <input class="form-control" type="password" name="user[newPass02]" />
        </div>
        <div class="form-group">
        <button type="submit" class="btn btn-success">Запази</button>
        </div>
    </form>
</div>
{% endblock %}
